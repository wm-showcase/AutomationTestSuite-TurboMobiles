pipeline {
  agent {
    // this image provides everything needed to run Cypress
    docker {
      image 'cypress/base:20.9.0'
    }
  }

  stages {
    stage('build and test') {
      steps {
        sh 'npm install cypress'
        sh "npm run  cy:run -- --spec "AutomationTestSuite-TurboMobiles/turbomobiles-automation-cypress/cypress/e2e/specs/todo.cy.js" "
      }
    }
  }
}